<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/viewer_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/shared_def_horizontal"
        android:layout_marginVertical="@dimen/shared_def_vertical"
        android:text="Title"
        android:textSize="@dimen/shared_title"
        android:textColor="@color/black"/>
    <WebView
        android:id="@+id/viewer_wb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="600dp"
        app:layout_constraintTop_toBottomOf="@id/viewer_tv_title"
       />
    <ImageView
        android:id="@+id/viewer_iv_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/dummy_cat_01"
        app:layout_constraintTop_toBottomOf="@id/viewer_wb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>