<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/viewer_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/shared_def_horizontal"
        android:layout_marginVertical="@dimen/shared_def_vertical"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/shared_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewer_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toTopOf="@id/viewer_wb" />


    <WebView
        android:id="@+id/viewer_wb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="600dp"
        app:layout_constraintTop_toBottomOf="@id/viewer_tv_title" />

    <ImageView
        android:id="@+id/viewer_iv_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/dummy_cat_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewer_wb"

        />


</androidx.constraintlayout.widget.ConstraintLayout>