<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <ImageView
        android:id="@+id/item_reply_iv_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12" />


    <ImageView
        android:id="@+id/item_reply_iv_menu"
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintDimensionRatio="1:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_reply_tv_user" />


    <TextView
        android:id="@+id/item_reply_tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/post_userinfo_magin_start"
        android:text="야생의 집사"
        android:textStyle="bold"
        android:textSize="@dimen/post_item_user"
        app:layout_constraintStart_toEndOf="@id/item_reply_iv_user"
        app:layout_constraintTop_toTopOf="@id/item_reply_iv_user" />

    <TextView
        android:id="@+id/item_reply_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/post_userinfo_magin_start"
        android:text="2021.09.24"
        android:textSize="@dimen/post_item_user"
        app:layout_constraintEnd_toStartOf="@id/item_reply_iv_menu"
        app:layout_constraintTop_toTopOf="@id/item_reply_iv_user" />


    <TextView
        android:id="@+id/item_reply_tv_user_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginStart="@dimen/post_userinfo_magin_start"
        android:layout_marginTop="@dimen/reply_magin_top"
        android:text="헉 넘넘 기여워용'3'"
        android:textSize="@dimen/post_item_user"
        app:layout_constraintEnd_toStartOf="@id/item_reply_iv_menu"
        app:layout_constraintStart_toEndOf="@id/item_reply_iv_user"
        app:layout_constraintTop_toBottomOf="@id/item_reply_tv_user" />


</androidx.constraintlayout.widget.ConstraintLayout>