<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/item_reply_iv_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@mipmap/ic_launcher_round"
        android:scaleType="fitXY"
        app:layout_constraintWidth_percent="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_reply_tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="야생의 집사"
        android:textSize="@dimen/post_item_user"
        android:layout_marginStart="@dimen/post_userinfo_magin_start"
        app:layout_constraintStart_toEndOf="@id/item_reply_iv_user"
        app:layout_constraintTop_toTopOf="@id/item_reply_iv_user" />
    <TextView
        android:id="@+id/item_reply_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="헉 넘넘 기여워용'3'"
        android:textSize="@dimen/post_item_user"
        android:layout_marginStart="@dimen/post_userinfo_magin_start"
        app:layout_constraintStart_toEndOf="@id/item_reply_iv_user"
        app:layout_constraintTop_toBottomOf="@id/item_reply_tv_user" />


</androidx.constraintlayout.widget.ConstraintLayout>